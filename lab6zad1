#include<stdio.h>
#include<stdlib.h>

int Kwadrat(int *a)
{
    return *a=*a**a;
}

int DodajJeden(int *a)
{
    return *a=*a+1;
}

int Podwajaj(int *a)
{
    return *a=*a*2;
}

int main()
{
    int a=4;
    Kwadrat(&a);
    printf("%d\n",a);
    DodajJeden(&a);
    printf("%d\n",a);
    Podwajaj(&a);
    printf("%d\n",a);
    DodajJeden(&a);
    printf("%d\n",a);
    return 0;
}
